{
    "root": true,
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "plugin:vue/essential",
        "plugin:prettier/recommended",
        "eslint:recommended"
    ],
    "plugins": ["vue", "prettier"],
    "parserOptions": {
        "parser": "babel-eslint",
        "sourceType": "module",
        "ecmaVersion": 2018
    },
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "singleQuote": true,
                "trailingComma": "es5",
                "bracketSpacing": true,
                "parser": "flow",
                "useTabs": false,
                "tabWidth": 4
            }
        ],

        "linebreak-style": ["error", "unix"],
        "no-console": "warn",
        "no-debugger": "warn",
        "missing-whitespace-between-attributes": "off",
        "quotes": [1, "single"],
        "semi": [2, "always"],
        "no-func-assign": 2,
        "no-const-assign": 2,
        "no-var": 2,
        "no-unused-vars": "warn",
        "vue/no-unused-vars": 1,
        "vue/require-prop-types": 0,
        "vue/order-in-components": 0,
        "vue/valid-v-for": 1,
        "vue/require-v-for-key": 1,
        "vue/no-side-effects-in-computed-properties": 0,
        "vue/html-self-closing": 0,
        "vue/max-attributes-per-line": [
            0,
            {
                "singleline": 1,
                "multiline": {
                    "max": 1,
                    "allowFirstLine": false
                }
            }
        ]
    }
}
